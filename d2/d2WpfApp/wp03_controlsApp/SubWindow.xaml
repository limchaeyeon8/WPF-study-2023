<Window x:Class="wp03_controlsApp.SubWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wp03_controlsApp"
        mc:Ignorable="d"
        Title="SubWindow" Height="400" Width="300">
    <StackPanel>
        <!-- 제일 많이 쓰는 방식 -->
        <Grid Width="100" Height="60" Background="CadetBlue" Margin="10">
            <Button Content="TAMBURINS" Foreground="Beige"/>
        </Grid>
        
        <!-- 뷰박스 (많이 쓰이지는 않음) -->
        <Grid Width="100" Height="60" Background="CadetBlue" Margin="10">
            <Viewbox>
                <Button Content="TAMBURINS" Foreground="Beige"/>
            </Viewbox>
        </Grid>

        <Grid Width="100" Height="60" Background="CadetBlue" Margin="10">
            <Viewbox Stretch="Fill">        <!-- 꽉채움 -->
                <Button Content="TAMBURINS" Foreground="Beige"/>
            </Viewbox>
        </Grid>

    </StackPanel>
</Window>
