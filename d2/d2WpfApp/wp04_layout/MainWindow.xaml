<Window x:Class="wp04_layout.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wp04_layout"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="500">

    <StackPanel> <!-- StackPanel; 부모가 가진 사이즈를 자식에게 물려주지 않음 -->
        <Canvas Width="90" Height="50" Background="DimGray" HorizontalAlignment="Center" Margin="10">
            <Button Content="OIOI" Foreground="DarkOrchid" Margin="10"/>
        </Canvas>

        <Grid Width="70" Height="60" Background="Linen">
            <Button Width="50" Height="20" Content="OIOI" Foreground="DarkOrchid" Background="{x:Null}"/>
        </Grid>
    </StackPanel>
</Window>
